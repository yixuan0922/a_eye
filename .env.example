# A_Eye Microservices Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/a_eye

# ================================
# AWS CREDENTIALS (for S3 and ECR)
# ================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# ================================
# EXTERNAL SERVICES
# ================================
# Flask Face Recognition API
FLASK_API_URL=https://aeye001.biofuel.osiris.sg

# ================================
# SERVICE PORTS (for reference)
# ================================
# These are set in docker-compose.yml
# API_GATEWAY_PORT=4000
# VIOLATIONS_SERVICE_PORT=3001
# UNAUTHORIZED_SERVICE_PORT=3002
# PERSONNEL_SERVICE_PORT=3003
# CAMERA_SERVICE_PORT=3004
# ATTENDANCE_SERVICE_PORT=3005
# SITE_SERVICE_PORT=3006
# FRONTEND_PORT=3000
# POSTGRES_PORT=5432

# ================================
# FRONTEND
# ================================
NEXT_PUBLIC_API_URL=http://localhost:4000

# ================================
# NODE ENVIRONMENT
# ================================
NODE_ENV=development

# ================================
# TERRAFORM VARIABLES (optional)
# ================================
# TF_VAR_db_password=your_secure_db_password
# TF_VAR_aws_region=us-east-1
# TF_VAR_environment=dev
